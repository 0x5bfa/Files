<Page
	x:Class="Files.App.UITests.Views.ResizeVisualPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.App.UITests.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="Page_Loaded"
	Unloaded="Page_Unloaded"
	mc:Ignorable="d">

	<StackPanel Spacing="24">

		<controls:SamplePanel Header="Default usage">
			<controls:SamplePanel.MainContent>
				<Grid
					Width="600"
					Height="48"
					Background="Blue"
					CornerRadius="4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<Rectangle
						x:Name="Rectangle1"
						Grid.Column="0"
						Width="195"
						MinWidth="64"
						Fill="Red" />

					<Rectangle
						x:Name="Rectangle2"
						Grid.Column="1"
						Width="200"
						Fill="Green" />

					<controls:ResizeVisual
						x:Name="Thumb1"
						Grid.Column="0"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Left"
						VerticalAlignment="Stretch"
						DragCompleted="Thumb1_DragCompleted"
						DragDelta="Thumb1_DragDelta"
						DragStarted="Thumb1_DragStarted" />

					<controls:ResizeVisual
						x:Name="Thumb2"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Left"
						VerticalAlignment="Stretch"
						DragCompleted="Thumb2_DragCompleted"
						DragDelta="Thumb2_DragDelta"
						DragStarted="Thumb2_DragStarted" />

				</Grid>
			</controls:SamplePanel.MainContent>
		</controls:SamplePanel>

	</StackPanel>
</Page>
