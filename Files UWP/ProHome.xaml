                                            <TextBlock Text="Favorites" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="Desktop">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xE8FC;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Desktop" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="Downloads">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xE896;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Downloads" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="Documents">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xE8A5;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Documents" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="Pictures">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xEB9F;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Pictures" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="Music">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xEC4F;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Music" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="Videos">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xE8B2;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Videos" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                            </ListView>
                            <TextBlock Margin="10" Text="Drives" FontSize="14" FontWeight="Bold" Padding="0" VerticalAlignment="Stretch"/>
                            <ListView ItemContainerStyle="{StaticResource FluentListViewItemContainerStyle}"  SelectionChanged="DrivesList_SelectionChanged" SelectionMode="Single" IsItemClickEnabled="True" ItemClick="DrivesList_ItemClick" Name="DrivesList">
                                <ListViewItem Tag="LocalDisk">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xEDA2;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="Local Disk (C:\)" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem Tag="OneDrive">
                                    <ListViewItem.Content>
                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                            <FontIcon FontSize="16" Glyph="&#xE753;" FontFamily="Segoe MDL2 Assets"/>
                                            <TextBlock Text="OneDrive" FontSize="12"/>
                                        </StackPanel>
                                    </ListViewItem.Content>
                                </ListViewItem>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </SplitView.Pane>

            <Frame Background="{StaticResource ApplicationPageBackgroundThemeBrush}" Name="ItemDisplayFrame"/>

        </SplitView>
        <ContentDialog Grid.RowSpan="4" DefaultButton="Primary" PrimaryButtonClick="PermissionDialog_PrimaryButtonClick" PrimaryButtonText="Grant Permission" Name="PermissionDialog" Title="Welcome to Files UWP">
            <Windows10version1903:ContentDialog.Shadow>
                <Windows10version1903:ThemeShadow/>
            </Windows10version1903:ContentDialog.Shadow>
            <Grid>
                <TextBlock TextWrapping="WrapWholeWords" Text="To get started, we need you to grant us permission to show you your files. This will open a Settings page where you can grant us permission. Files will close in the process, so don't be afraid to come back! "/>
            </Grid>
        </ContentDialog>
