<UserControl
    x:Class="Files.UserControls.StatusBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.UserControls"
    xmlns:local1="using:Files"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        Height="40"
        HorizontalAlignment="Stretch"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel
            Grid.Row="1"
            Padding="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="34"
                Height="30"
                Margin="2,0,2,0"
                Background="Transparent"
                CornerRadius="2"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16"
                Style="{StaticResource ToolBarButtonStyle}">
                <Button.Content>
                    &#xE762;
                </Button.Content>
            </Button>

            <Button
                Width="34"
                Height="30"
                Margin="2,0,2,0"
                Background="Transparent"
                Command="{x:Bind local1:App.AppSettings.ToggleLayoutMode}"
                Content="{x:Bind local1:App.AppSettings.ToggleLayoutModeIcon, Mode=OneWay}"
                CornerRadius="2"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16" />
        </StackPanel>

    </Grid>
</UserControl>
